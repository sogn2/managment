<mapper namespace="com.booking.app.dao.BookingMapper">

    <!--  고객정보 등록  -->
    <insert id="customerInsert" parameterType="CustomerDto">
        INSERT INTO customer (customerName,customerPhone) values (#{customerName},#{customerPhone});
    </insert>
    <!--  예약 등록  -->
    <insert id="bookingInsert" parameterType="BookingDto">
<!--       <selectKey resultType="int" keyProperty="customerNumber" order="AFTER">-->
<!--            SELECT LAST_INSERT_ID()-->
<!--        </selectKey>-->

               INSERT INTO booking (customerNumber,companyNumber,personnel,Requirements,reservationDate,visitStatus) VALUES ((select max(customerNumber2) from customer)  ,#{companyNumber},#{personnel},#{Requirements},#{reservationDate},#{visitStatus});

    </insert>

    <select id="bookingList" resultType="map" parameterType="map">
        select * from booking  a inner JOIN customer  b on a.customerNumber = b.customerNumber2;    </select>
